 // Curely braces is a scope of a variable
 // outer/global  scope/function  or a inner/nested/child function/scope can get the value of a global scope is called a clouser.



 //*************Example */

 function one(){ 
   const username="ali"
   function two(){
    const website="youtube"
    console.log(website + username);
   }
   two()
//console.log(username);
 }
 one();



 //****************** By using If else**************** */


 if (true){
    const name="Bisma"

    if(name==="Bisma"){
        const Fname="Batool"
        console.log(name+Fname);
    }
    console.log(name);
 }



 /// Function with or without variable declartion 


// function declare karnay sa phly dunction ko call krna hi Hoisting khlata h
 
 console.log(addTwo(8))
 //********* without variable */
 function addTwo(num){
   return num+1
 }
 





 //**************  With variable */
 

 // jb hmm function ko variable me store karwaty h toh function declare karnay sa phly call nahi kr sakty h 
 const addTwo1=function(num1){
   return num1+3
  }
  console.log(addTwo1(10))